<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.driveremergency.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/average_sans"
                android:text="MADAD - DRIVER"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"
        android:id="@+id/include" />


    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bottom_acceptance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/average_sans"
                android:gravity="center"
                android:padding="5dp"
                android:text="E M E R G E N C Y"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:fontFamily="@font/average_sans" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <Button
                    android:id="@+id/cancel_ride"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Cancel     Ride"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


                <Button
                    android:id="@+id/navigate_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Navigate     Me"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Reached    Location"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="End               Trip"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/contact_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center"

                    android:text="Contact       User"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardElevation="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:columnCount="2"
            android:rowCount="2">

            <EditText
                android:id="@+id/_destionation_route"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:fontFamily="@font/average_sans"
                android:hint="Enter Place Name for Directions"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/_SearchDirections"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:fontFamily="@font/average_sans"
                android:text="Get Directions"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/mStatusText"
                android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_row="0"
                android:fontFamily="@font/average_sans"
                android:padding="15dp"
                android:text="Offline"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/status_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:checked="false"
                android:fontFamily="@font/average_sans"
                android:padding="5dp" />


        </GridLayout>
    </android.support.v7.widget.CardView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame1"
        android:visibility="gone"></FrameLayout>



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone"></FrameLayout>


</RelativeLayout>
