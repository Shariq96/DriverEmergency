<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/topBar"
                android:fontFamily="@font/average_sans"
                android:gravity="center"
                android:padding="5dp"
                android:text="E M E R G E N C Y"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:fontFamily="@font/average_sans" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <Button
                    android:id="@+id/cancel_ride"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Cancel     Ride"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


                <Button
                    android:id="@+id/navigate_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Navigate     Me"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="Reached    Location"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:text="End               Trip"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/contact_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center"

                    android:text="Contact       User"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>